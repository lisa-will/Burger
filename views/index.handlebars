<div class="row">
    <div class="col-md-12">
        <h1 id="title">"Eat-Da-Burger!"</h1>
        <div id="animated" class="animated bounce"></div>
    </div>
</div>

<div class="row">
    <div class="col-md-4">
        <h2>Burgers I want to eat!</h2>

        <ul>
            {{#each burgers}}{{#unless this.devoured}}
            <div class="newBurger">

                {{this.burger_name}}

                <form id="devour" action="burgers/update/{{this.id}}?_method_PUT" method="POST">
                <input type="hidden" name="devoured" value="1">
                <button type="submit">"Devour it!"</button>
                </form>
                </li>
            </div>
            {{/unless}}{{/each}}
            </ul>
            </div>

            <div class="col-md-4">
                <h2>Add a Burger!</h2>
                <form class="create-update-form" action="burgers/create"

                <div class="form-group">
                    <label for="burger_name">Burger Name:</label>
                    <input type="text" id="burger_name" name="burger_name">
                </div>

                <button type="submit">Add Burger</button>
                </form>
                </div>

                <div class="col-md-4">
                    <h2>Burgers I have DEVOURED!</h2>

                    <ul>
                        {{#each burgers}} {{#if this.devoured}}
                        <div class="devouredBurger">
                            <li>
                                {{this.burger_name}}

                            </li>
                        </div>
                        {{/if}} {{/each}}
                    </ul>
                </div>
            




